<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DisconnectionListActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/toolbarDisconnectionForm"
            android:background="@color/purple_500">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/accountName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/TextAppearance.AppCompat.Title"
                    android:text="Account Name"
                    android:textColor="@color/white"/>

                <TextView
                    android:id="@+id/accountNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Account Number"
                    android:textColor="@color/white"/>

            </LinearLayout>

        </androidx.appcompat.widget.Toolbar>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            app:cardElevation="3dp"
            app:contentPadding="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sequence Code"
                            android:layout_weight="1"
                            android:layout_column="1"/>

                        <TextView
                            android:id="@+id/sequenceCode"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="..."
                            android:textColor="?attr/textFillColor"
                            android:gravity="right"
                            android:layout_weight="2"
                            android:layout_column="50"/>

                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Account Type"
                            android:layout_weight="1"
                            android:layout_column="1"/>

                        <TextView
                            android:id="@+id/accountType"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="..."
                            android:textColor="?attr/textFillColor"
                            android:gravity="right"
                            android:layout_weight="2"
                            android:layout_column="50"/>

                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rate For This Account"
                            android:layout_weight="1"
                            android:layout_column="1"/>

                        <TextView
                            android:id="@+id/rate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="..."
                            android:textColor="?attr/textFillColor"
                            android:gravity="right"
                            android:layout_weight="2"
                            android:layout_column="50"/>

                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Amount Due"
                            android:layout_weight="1"
                            android:layout_column="1"/>

                        <TextView
                            android:id="@+id/amountDue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="..."
                            android:textColor="?attr/textFillColor"
                            android:gravity="right"
                            android:layout_weight="2"
                            android:layout_column="50"/>

                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Service Date From"
                            android:layout_weight="1"
                            android:layout_column="1"/>

                        <TextView
                            android:id="@+id/dateFrom"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="..."
                            android:textColor="?attr/textFillColor"
                            android:gravity="right"
                            android:layout_weight="2"
                            android:layout_column="50"/>

                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Service Date To"
                            android:layout_weight="1"
                            android:layout_column="1"/>

                        <TextView
                            android:id="@+id/dateTo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="..."
                            android:textColor="?attr/textFillColor"
                            android:gravity="right"
                            android:layout_weight="2"
                            android:layout_column="50"/>

                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Due Date"
                            android:layout_weight="1"
                            android:layout_column="1"/>

                        <TextView
                            android:id="@+id/dueDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="..."
                            android:textColor="?attr/textFillColor"
                            android:gravity="right"
                            android:layout_weight="2"
                            android:layout_column="50"/>

                    </TableRow>

                </TableLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/grey_100"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"/>

                <RadioButton
                    android:id="@+id/disconnectButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Disconnect This Account"
                    android:textColor="@color/red" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.mapbox.mapboxsdk.maps.MapView
            android:id="@+id/mapviewDisconnectionForm"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            app:mapbox_cameraZoom="13" />

    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/saveDisconnectionData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|bottom"
        android:layout_marginBottom="15dp"
        android:layout_marginRight="15dp"
        android:src="@drawable/ic_baseline_download_24"
        app:tint="@color/white"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>